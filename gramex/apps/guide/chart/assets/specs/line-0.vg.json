{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 600,
  "height": 340,
  "autosize": "fit",
  "padding": {
    "top": 20
  },
  "title": {
    "text": "Multi Line",
    "offset": 20,
    "fontSize": 16,
    "limit": {
      "signal": "width"
    },
    "color": "#414141",
    "anchor": "start",
    "fontWeight": "bold"
  },
  "data": [
    {
      "name": "table",
      "url": "<%= dataset_url %>"
    }
  ],
  "scales": [
    {
      "name": "x axis",
      "type": "point",
      "range": "width",
      "paddingOuter": 0.3,
      "domain": {
        "data": "table",
        "field": "<%= data_mapper.column_3 %>"
      }
    },
    {
      "name": "y axis",
      "type": "linear",
      "range": "height",
      "domain": {
        "data": "table",
        "field": "<%= data_mapper.column_2 %>"
      }
    },
    {
      "name": "scale_color",
      "type": "ordinal",
      "range": {
        "scheme": "paired"
      },
      "domain": {
        "data": "table",
        "field": "<%= data_mapper.column_1 %>"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "x axis",
      "ticks": false,
      "titlePadding": 5,
      "minExtent": 35,
      "labelPadding": 7,
      "grid": true,
      "gridColor": "#000000",
      "gridOpacity": 0.3,
      "gridDash": 2,
      "title": "X - Axis"
    },
    {
      "orient": "left",
      "scale": "y axis",
      "ticks": false,
      "titlePadding": 5,
      "labelFlush": true,
      "labelPadding": 7,
      "grid": true,
      "gridColor": "#000000",
      "gridOpacity": 0.3,
      "gridDash": 2,
      "minExtent": 25,
      "title": "Y - Axis"
    }
  ],
  "legends": [
    {
      "fill": "scale_color",
      "direction": "horizontal",
      "padding": 10,
      "orient": "none",
      "encode": {
        "legend": {
          "update": {
            "x2": {
              "signal": "width"
            },
            "y2": {
              "value": 0
            }
          }
        }
      },
      "symbolType": "square"
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "<%= data_mapper.column_1 %>"
        }
      },
      "marks": [
        {
          "name": "Lines",
          "type": "line",
          "from": {
            "data": "series"
          },
          "encode": {
            "enter": {
              "x": {
                "scale": "x axis",
                "field": "<%= data_mapper.column_3 %>"
              },
              "y": {
                "scale": "y axis",
                "field": "<%= data_mapper.column_2 %>"
              },
              "stroke": {
                "scale": "scale_color",
                "field": "<%= data_mapper.column_1 %>"
              },
              "strokeWidth": {
                "value": 1
              }
            }
          }
        },
        {
          "name": "Points",
          "type": "symbol",
          "from": {
            "data": "series"
          },
          "shape": "cross",
          "encode": {
            "enter": {
              "width": {
                "scale": "x axis",
                "field": "<%= data_mapper.column_3 %>"
              },
              "x": {
                "scale": "x axis",
                "field": "<%= data_mapper.column_3 %>"
              },
              "y": {
                "scale": "y axis",
                "field": "<%= data_mapper.column_2 %>"
              },
              "fill": {
                "scale": "scale_color",
                "field": "<%= data_mapper.column_1 %>"
              },
              "stroke": {
                "value": "#ffffff"
              },
              "strokeWidth": {
                "value": 1.5
              },
              "tooltip": {"signal": "datum"}
            }
          }
        }
      ]
    }
  ]
}
