{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 570,
  "height": 330,
  "autosize": "fit",
  "padding": {
    "left": 15,
    "top": 15,
    "right": 15,
    "bottom": 15
  },
  "title": {
    "text": "SCATTER PLOT",
    "anchor": "start",
    "color": "#485465",
    "fontSize": 13,
    "fontWeight": 900,
    "font": "Roboto"
  },
  "signals": [
    {
      "name": "down", "value": null,
      "on": [
        {"events": "touchend", "update": "null"},
        {"events": "mousedown, touchstart", "update": "xy()"}
      ]
    },
    {
      "name": "delta", "value": [0, 0],
      "on": [
        {
          "events": [
            {
              "source": "window", "type": "mousemove", "consume": true,
              "between": [{"type": "mousedown"}, {"source": "window", "type": "mouseup"}]
            },
            {
              "type": "touchmove", "consume": true,
              "filter": "event.touches.length === 1"
            }
          ],
          "update": "down ? [down[0]-x(), y()-down[1]] : [0,0]"
        }
      ]
    },
    {
      "name": "xcur", "value": null,
      "on": [
        {
          "events": "mousedown, touchstart, touchend",
          "update": "slice(x_domain)"
        }
      ]
    },
    {
      "name": "ycur", "value": null,
      "on": [
        {
          "events": "mousedown, touchstart, touchend",
          "update": "slice(y_domain)"
        }
      ]
    },
    {
      "name": "anchor", "value": [0, 0],
      "on": [
        {
          "events": "wheel",
          "update": "[invert('xscale', x()), invert('yscale', y())]"
        },
        {
          "events": {"type": "touchstart", "filter": "event.touches.length===2"},
          "update": "[(x_domain[0] + x_domain[1]) / 2, (y_domain[0] + y_domain[1]) / 2]"
        }
      ]
    },
    {
      "name": "zoom", "value": 1,
      "on": [
        {
          "events": "wheel!",
          "force": true,
          "update": "pow(1.001, event.deltaY * pow(16, event.deltaMode))"
        },
        {
          "events": {"signal": "dist2"},
          "force": true,
          "update": "dist1 / dist2"
        }
      ]
    },
    {
      "name": "dist1", "value": 0,
      "on": [
        {
          "events": {"type": "touchstart", "filter": "event.touches.length===2"},
          "update": "pinchDistance(event)"
        },
        {
          "events": {"signal": "dist2"},
          "update": "dist2"
        }
      ]
    },
    {
      "name": "dist2", "value": 0,
      "on": [{
        "events": {"type": "touchmove", "consume": true, "filter": "event.touches.length===2"},
        "update": "pinchDistance(event)"
      }]
    },
    {
      "name": "x_domain", "update": "slice(x_extent)",
      "on": [
        {
          "events": {"signal": "delta"},
          "update": "[xcur[0] + span(xcur) * delta[0] / width, xcur[1] + span(xcur) * delta[0] / width]"
        },
        {
          "events": {"signal": "zoom"},
          "update": "[anchor[0] + (x_domain[0] - anchor[0]) * zoom, anchor[0] + (x_domain[1] - anchor[0]) * zoom]"
        }
      ]
    },
    {
      "name": "y_domain", "update": "slice(y_extent)",
      "on": [
        {
          "events": {"signal": "delta"},
          "update": "[ycur[0] + span(ycur) * delta[1] / height, ycur[1] + span(ycur) * delta[1] / height]"
        },
        {
          "events": {"signal": "zoom"},
          "update": "[anchor[1] + (y_domain[0] - anchor[1]) * zoom, anchor[1] + (y_domain[1] - anchor[1]) * zoom]"
        }
      ]
    }
  ],
  "data": [
    {
      "name": "source",
      "url": "<%= dataset_url %>",
      "transform": [
        {
          "type": "filter",
          "expr": "datum['<%= data_mapper.column_2 %>'] != null && datum['<%= data_mapper.column_1 %>'] != null && datum['<%= data_mapper.column_3%>'] != null"
        },
        { "type": "extent", "field": "<%= data_mapper.column_2 %>", "signal": "x_extent" },
        { "type": "extent", "field": "<%= data_mapper.column_1 %>", "signal": "y_extent" }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "round": true,
      "nice": true,
      "padding": 0.1,
      "zero": false,
      "domain": {
        "signal": "x_domain"
      },
      "range": "width"
    },
    {
      "name": "yscale",
      "type": "linear",
      "round": true,
      "nice": true,
      "padding": 0.1,
      "zero": false,
      "domain": {
        "signal": "y_domain"
      },
      "range": "height"
    },
    {
      "name": "size",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "<%= data_mapper.column_3 %>"
      },
      "range": {
        "signal": "[5, 1000]"
      }
    }
  ],
  "axes": [
    {
      "scale": "xscale",
      "grid": false,
      "domain": true,
      "orient": "bottom",
      "ticks": false,
      "tickCount": 12,
      "labelPadding": 10,
      "title": "<%= data_mapper.column_2 %>",
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelFontWeight": 500,
      "labelFont": "Roboto"
    },
    {
      "scale": "yscale",
      "grid": false,
      "domain": true,
      "labelPadding": 10,
      "orient": "left",
      "ticks": false,
      "tickCount": 7,
      "title": "<%= data_mapper.column_1 %>",
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelFontWeight": 500,
      "labelFont": "Roboto"
    }
  ],
  "marks": [
    {
      "name": "Circles",
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "clip": true,
      "encode": {
        "update": {
          "tooltip": {
            "signal": "datum"
          },
          "x": {
            "scale": "xscale",
            "field": "<%= data_mapper.column_2 %>"
          },
          "y": {
            "scale": "yscale",
            "field": "<%= data_mapper.column_1 %>"
          },
          "size": {
            "scale": "size",
            "field": "<%= data_mapper.column_3 %>"
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#53A8E2"
          },
          "stroke": {
            "value": "#fffff"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    },
    {
      "name": "Annotation",
      "type": "text",
      "from": {
        "data": "source"
      },
      "clip": true,
      "encode": {
        "update": {
          "x": {
            "scale": "xscale",
            "field": "<%= data_mapper.column_2 %>"
          },
          "y": {
            "scale": "yscale",
            "field": "<%= data_mapper.column_1 %>"
          },
          "dy": {
            "value": -20
          },
          "dx": {
            "value": -15
          },
          "text": {
            "signal": "datum['<%= data_mapper.column_2 %>'] < 5 && datum['<%= data_mapper.column_1 %>'] > 3 ? 'Outlier': '' "
          }
        }
      }
    }
  ]
}