{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 770,
  "height": 330,
  "autosize": "fit",
  "padding": {
    "left": 15,
    "top": 15,
    "right": 15,
    "bottom": 15
  },
  "title": {
    "text": "SCATTER PLOT",
    "anchor": "start",
    "color": "#485465",
    "fontSize": 13,
    "fontWeight": 900,
    "font": "Roboto"
  },
  "signals": [
    {
      "name": "is_brush_ended",
      "value": 0,
      "on": [
        {"events": "view:mouseup, view:touchend", "update": "is_brushing ? is_brush_ended + 1 : 0"}
      ]
    },
    {
      "name": "is_brushing",
      "value": false,
      "on": [
        {"events": {"signal": "brushX"}, "update": "true"},
        {"events": {"signal": "brushY"}, "update": "true"},
        {"events": "view:mouseup, view:touchend", "update": "false"}
      ]
    },
    {
      "name": "down",
      "value": [0, 0],
      "on": [{"events": "view:mousedown, view:touchstart", "update": "[x(), y()]"}
      ]
    },
    {
      "name": "brushX",
      "value": 0,
      "on": [
        {
          "events": "[view:mousedown, view:mouseup] > view:mousemove, [view:touchstart, view:touchend] > view:touchmove",
          "update": "[invert('xscale',down[0]), invert('xscale', x())]"
        }
      ]
    },
    {
      "name": "brushY",
      "value": 0,
      "on": [
        {
          "events": "[view:mousedown, view:mouseup] > view:mousemove, [view:touchstart, view:touchend] > view:touchmove",
          "update": "[invert('yscale', y()), invert('yscale',down[1])]"
        }
      ]
    },
    {
      "name": "x_domain",
      "update": "slice(x_extent)",
      "on": [
        {"events": {"signal": "is_brush_ended"}, "update": "[brushX[0],  brushX[1]]"},
        {"events": "window:dblclick", "update": "slice(x_extent)"}
      ]
    },
    {
      "name": "y_domain",
      "update": "slice(y_extent)",
      "on": [
        {"events": {"signal": "is_brush_ended"}, "update": "[brushY[0],  brushY[1]]"},
        {"events": "window:dblclick", "update": "slice(y_extent)"}
      ]
    },
    {
      "name": "cursor",
      "value": "'default'",
      "on": [
        {
          "events": "[view:mousedown, view:mouseup] > view:mousemove!, [view:touchstart, view:touchend] > view:touchmove!",
          "update": "'nwse-resize'"
        },
        {"events": "view:mouseup, view:touchend", "update": "'default'"}
      ]
    }
  ],
  "data": [
    {
      "name": "source",
      "url": "<%= dataset_url %>",
      "transform": [
        {
          "type": "filter",
          "expr": "datum['<%= data_mapper.column_2 %>'] != null && datum['<%= data_mapper.column_1 %>'] != null && datum['<%= data_mapper.column_3%>'] != null"
        },
        { "type": "extent", "field": "<%= data_mapper.column_2 %>", "signal": "x_extent" },
        { "type": "extent", "field": "<%= data_mapper.column_1 %>", "signal": "y_extent" }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "round": true,
      "nice": true,
      "padding": 0.1,
      "zero": false,
      "domain": {
        "signal": "x_domain"
      },
      "range": "width"
    },
    {
      "name": "yscale",
      "type": "linear",
      "round": true,
      "nice": true,
      "padding": 0.1,
      "zero": false,
      "domain": {
        "signal": "y_domain"
      },
      "range": "height"
    },
    {
      "name": "size",
      "type": "linear",
      "domain": {
        "data": "source",
        "field": "<%= data_mapper.column_3 %>"
      },
      "range": {
        "signal": "[5, 1000]"
      }
    }
  ],
  "axes": [
    {
      "scale": "xscale",
      "grid": false,
      "domain": true,
      "orient": "bottom",
      "ticks": false,
      "tickCount": 12,
      "labelPadding": 10,
      "title": "<%= data_mapper.column_2 %>",
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelFontWeight": 500,
      "labelFont": "Roboto"
    },
    {
      "scale": "yscale",
      "grid": false,
      "domain": true,
      "labelPadding": 10,
      "orient": "left",
      "ticks": false,
      "tickCount": 7,
      "title": "<%= data_mapper.column_1 %>",
      "titleFont": "Roboto",
      "titleColor": "#485465",
      "titleFontSize": 12,
      "titleFontWeight": 500,
      "titlePadding": 16,
      "labelColor": "#485465",
      "labelFontSize": 10,
      "labelFontWeight": 500,
      "labelFont": "Roboto"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "name": "brush",
      "encode": {
        "update": {
          "opacity": {"signal": "is_brushing ? 1 : 0"},
          "x": {"signal": "scale('xscale', brushX[0])"},
          "x2": {"signal": "scale('xscale', brushX[1])"},
          "y": {"signal": "scale('yscale', brushY[0])"},
          "y2": {"signal": "scale('yscale', brushY[1])"},
          "fill": {"value": "#cccccc"},
          "zindex": {"value": -2},
          "fillOpacity": {"value": 0.7}
        }
      }
    },
    {
      "name": "Circles",
      "type": "symbol",
      "from": {
        "data": "source"
      },
      "clip": true,
      "encode": {
        "update": {
          "tooltip": {
            "signal": "datum"
          },
          "x": {
            "scale": "xscale",
            "field": "<%= data_mapper.column_2 %>"
          },
          "y": {
            "scale": "yscale",
            "field": "<%= data_mapper.column_1 %>"
          },
          "size": {
            "scale": "size",
            "field": "<%= data_mapper.column_3 %>"
          },
          "shape": {
            "value": "circle"
          },
          "fill": {
            "value": "#53A8E2"
          },
          "stroke": {
            "value": "#ffffff"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      }
    }
  ]
}