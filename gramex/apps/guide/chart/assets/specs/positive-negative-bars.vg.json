{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 600,
  "height": 360,
  "autosize": "fit",
  "data": [
    {
      "name": "table",
      "url": "<%= dataset_url %>",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "<%= data_mapper.column_1 %>"
          ],
          "fields": [
            "<%= data_mapper.column_2 %>"
          ],
          "ops": ["sum"],
          "as": [
            "<%= data_mapper.column_2 %>"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {
        "data": "table",
        "field": "<%= data_mapper.column_1 %>"
      },
      "range": "width",
      "padding": 0.2,
      "round": true
    },
    {
      "name": "yscale",
      "domain": {
        "data": "table",
        "field": "<%= data_mapper.column_2 %>"
      },
      "nice": true,
      "range": "height"
    }
  ],
  "marks": [
    {
      "name": "bars",
      "type": "rect",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "<%= data_mapper.column_1 %>"
          },
          "width": {
            "scale": "xscale",
            "band": 1
          },
          "y": {
            "scale": "yscale",
            "field": "<%= data_mapper.column_2 %>"
          },
          "y2": {
            "signal": "scale('yscale', 0)"
          },
          "fill": {
            "signal": "datum['<%= data_mapper.column_2 %>'] > 0 ? '#5CB38B' : '#E6685C'"
          },
          "tooltip": {
            "signal": "datum"
          }
        }
      }
    },
    {
      "name": "item_score",
      "type": "text",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "<%= data_mapper.column_1 %>"
          },
          "y": {
            "scale": "yscale",
            "field": "<%= data_mapper.column_2 %>"
          },
          "dy": {
            "signal": "datum['<%= data_mapper.column_2 %>'] > 0 ? -4 : 14"
          },
          "dx": {
            "signal": "bandwidth('xscale')/2"
          },
          "align": {
            "value": "center"
          },
          "fill": {
            "value": "black"
          },
          "text": {
            "field": "<%= data_mapper.column_2 %>"
          },
          "fontSize": {
            "value": 12
          }
        }
      }
    },
    {
      "name": "item_name",
      "type": "text",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "scale": "xscale",
            "field": "<%= data_mapper.column_1 %>"
          },
          "dx": {
            "value": 20
          },
          "dy": {
            "signal": "datum['<%= data_mapper.column_2 %>'] > 0 ? height/2 + 14 : height/2 - 6"
          },
          "align": {
            "value": "center"
          },
          "fill": {
            "value": "#000000"
          },
          "text": {
            "field": "<%= data_mapper.column_1 %>"
          },
          "fontSize": {
            "value": 12
          }
        }
      }
    }
  ]
}
